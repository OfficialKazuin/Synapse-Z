local Punch

for i,v in pairs(game.Players.LocalPlayer.Character:GetChildren()) do
    if v:FindFirstChild("E") then
        Punch = v.E
    end
end

game.RunService.Heartbeat:Connect(function()
    Punch:FireServer()

    local found = false
    repeat
        for i,v in pairs(game.Workspace["Punching Bags"]:GetChildren()) do
            if v.Name == "Punching bag" and math.random(1, 100) == 1 then
                game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = v["Punching bag"].HumanoidRootPart.CFrame
                found = true
                break
            end
        end
    until found
end)
