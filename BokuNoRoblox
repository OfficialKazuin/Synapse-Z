getgenv().Autofarm = true
local NPC = "All Might 1" -- 'Mirko' or 'Deku' or 'Awakened Tomura' or 'AllForOne' or 'All Might 1' or 'Overhaul' or 'Endeavor'
local Target = nil
local LocalPlayer = game:GetService("Players").LocalPlayer

local function esp(Character)
    local BillboardGui = Instance.new('BillboardGui')
    local TextLabel = Instance.new('TextLabel')
        
    BillboardGui.Parent = Character:FindFirstChild("HumanoidRootPart")
    BillboardGui.AlwaysOnTop = true
    BillboardGui.Name = "X"
    BillboardGui.Size = UDim2.new(0, 50, 0, 50)
    BillboardGui.StudsOffset = Vector3.new(0,0,0)
        
    TextLabel.Parent = BillboardGui
    TextLabel.BackgroundTransparency = 1
    TextLabel.Size = UDim2.new(1, 0, 1, 0)
    TextLabel.Text = "X"
    TextLabel.TextColor3 = Color3.new(255, 255, 255)
    TextLabel.TextScaled = true
end

local function tween(part1, part2)
    local tw = game.TweenService:Create(part1, TweenInfo.new((part1.Position - part2.Position).Magnitude / 550), {CFrame = part2})
    tw:Play()
    tw.Completed:Wait()
end

local function Noclip(Toggle)
    for _, child in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
        if child:IsA("BasePart") and child.CanCollide == true and child.Name ~= floatName then
            child.CanCollide = Toggle
        end
    end
end

local function NewTarget()
    if getgenv().Autofarm and Target == nil then
        for i,v in pairs(game:GetService("Workspace").NPCs:GetChildren()) do
            if v.Name == NPC and v.Humanoid.Health ~= 0 then
                Target = v
            end
        end
    end
end

game.RunService.Heartbeat:Connect(function()

    if getgenv().Autofarm and Target ~= nil and Target:FindFirstChild("Humanoid") and Target:FindFirstChild("HumanoidRootPart") and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
        if Target.Humanoid.Health ~= 0 then
            if not Target.HumanoidRootPart:FindFirstChild("X") then
                esp(Target)
            end
            LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(Target.HumanoidRootPart.Position + Vector3.new(0, -150, 0), Target.HumanoidRootPart.Position)
        else

            LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(Target.HumanoidRootPart.Position + Vector3.new(0, 150, 0), Target.HumanoidRootPart.Position)

            Target = nil

            NewTarget()
        end
    else
        Target = nil

        NewTarget()
    end
end)
